      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
        <button type="submit" class="btn btn-primary">Remove myself</button>
      </div>
      </form>
    </div>
  </div>
</div>

  {{#if editingEnabled}}
