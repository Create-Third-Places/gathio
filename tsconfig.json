{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ES2020",
    "allowJs": true,
    "checkJs": true,
    "removeComments": true,
    "resolveJsonModule": true,
    "typeRoots": ["./node_modules/@types"],
    "sourceMap": true,
    "outDir": "dist",
    "strict": true,
    "baseUrl": ".",
    "forceConsistentCasingInFileNames": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "moduleResolution": "nodenext",
    "skipLibCheck": true,
  },
  "include": ["src/**/*"],
}